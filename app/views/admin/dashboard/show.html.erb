<section class="admin-dashboard-index">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="card mb-3">
    <div class="card-body">
      <h4 class="card-title">Store Statistics</h4>

      <div class="row">
        <div class="col-md-6">
          <h5 class="card-text">Total Products: <%= @product_count %></h5>
          <p>(<%= link_to 'View Products', admin_products_path %>)</p>
        </div>
        <div class="col-md-6">
          <h5 class="card-text">Total Categories: <%= @category_count %></h5>
          <p>(<%= link_to 'View Categories', admin_categories_path %>)</p>
        </div>
      </div>
    </div>
  </div>

</section>
